    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Example",
            "type": "debugpy",
            "request": "launch",
            "module": "python_factory.example",
            "justMyCode": false
        },
        // Provide a configuration for debugging tests
        {
            "name": "Python Debugger: Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "justMyCode": false,
            "purpose": [
                "debug-test",
                "debug-in-terminal"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ]
        }
    ]
}
